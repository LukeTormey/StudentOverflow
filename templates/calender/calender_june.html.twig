{% extends 'base.html.twig' %}

{% block title %}Calender{% endblock %}

{% block body %}
<style>
    ul {list-style-type: none;}
    body {font-family: Verdana, sans-serif;}
    .month {
        padding: 70px 25px;
        width: 95%;
        background: rgb(61, 62, 65);
        text-align: center;
    }
    .month ul {
        margin: 0;
        padding: 0;
    }
    .month ul li {
        color: white;
        font-size: 20px;
        text-transform: uppercase;
        letter-spacing: 3px;
    }
    .weekdays {
        margin: 0;
        padding: 10px 0;
        background-color:#ddd;
    }
    .weekdays li {
        display: inline-block;
        width: 13.6%;
        color: #666;
        text-align: center;
    }
    .days {
        padding: 10px 0;
        background: #eee;
        margin: 0;
    }
    .days li {
        list-style-type: none;
        display: inline-block;
        width: 13.6%;
        text-align: center;
        margin-bottom: 5px;
        font-size:12px;
        color: #777;
    }
</style>
