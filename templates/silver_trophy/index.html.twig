    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Award</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for silver_trophy in silver_trophies %}
            <tr>
                <td>{{ silver_trophy.id }}</td>
                <td>{{ silver_trophy.award }}</td>
                <td>{{ silver_trophy.image }}</td>
                <td>
